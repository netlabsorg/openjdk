  SHARE_JDK_DOC_SRC = $(JDK_TOPDIR)
  SHARE_JRE_DOC_SRC = $(JDK_TOPDIR)
  # Same files for jdk and jre, no name changes
  LICENSE_DOCLIST_JDK = LICENSE     ASSEMBLY_EXCEPTION
  LICENSE_DOCLIST_JRE = LICENSE     ASSEMBLY_EXCEPTION
